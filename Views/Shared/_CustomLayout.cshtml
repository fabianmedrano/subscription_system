    <main id="main" class="main">
        @RenderBody()
    </main>

    <partial name="_NotificationPartial" />
    <partial name="Layout/_FooterPartial" />
    <partial name="Layout/_JsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
