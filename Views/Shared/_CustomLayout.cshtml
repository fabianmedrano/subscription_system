@{
    var a = ViewData;
    var area = ViewData["Area"]?.ToString() ?? "client";
    var aa = ViewData["Area"];
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Descripción de la página para SEO" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <partial name="Layout/_CssPartial" />
</head>
<body>

  
    <!-- -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <partial name="Layout/_IconPartial" />    
        @await Component.InvokeAsync("AreaNavigation", new { area = area });
    </header>
    @await Component.InvokeAsync("AreaSidebar", new { area = area });
   

    <main id="main" class="main">
        <h1>Área actual: @area</h1>
        @RenderBody()
    </main>

    <partial name="_NotificationPartial" />
    <partial name="Layout/_FooterPartial" />
    <partial name="Layout/_JsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>