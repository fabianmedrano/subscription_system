@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="assets/img/logo.png" alt="">
                                <span class="d-none d-lg-block"></span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                   
                                    <p class="text-center small">Enter your username & password to login</p>
                                </div>
                                <form id="account" method="post" class="row g-3 needs-validation" novalidate>
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                    <div class="col-12">
                                        <label for="yourUsername" class="form-label" asp-for="Input.Email">Password</label>
                                        <input asp-for="Input.Email" aria-required="true" type="text" class="form-control" autocomplete="username" required>
                                        <span class="invalid-feedback" asp-validation-for="Input.Email" placeholder="name@example.com">Please enter your password!</span>
                                    </div>

                                    <div class="col-12">
                                        <label for="yourPassword" class="form-label" asp-for="Input.Password">Password</label>
                                        <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" type="password" class="form-control" required>
                                        <sapn class="invalid-feedback" asp-validation-for="Input.Password">Please enter your password!</sapn>
                                    </div>


                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe" asp-for="Input.RememberMe">
                                            <label class="form-check-label" asp-for="Input.RememberMe">  @Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button id="login-submit" class="btn btn-primary w-100" type="submit">Login</button>
                                    </div>
                                    <div class="col-12">
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    </div>
                                    <div class="col-12">
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0"> <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
</main><!-- End #main -->
