
@model subscription_system.Areas.Admin.Models.ViewModel.Plan.PlanViewModel;
@{
    ViewData["Title"] = "Create";
}


<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="container border rounded  shadow p-4">
            <h2>Nuevo plan de subscripción</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-10">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="form-check-label" asp-for="Active">@Html.DisplayNameFor(model => model.Active)</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="Active">
                            </div>
                        </div>
                    </div>
                </div>
               
            
              
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input asp-for="Price" type="number" class="form-control" aria-label="Amount (to the nearest dollar)">
                        <span class="input-group-text">.00</span>
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
           
                <div class="row">
                    <div class="col-6">

                        <div class="form-group">
                            <label asp-for="BillingPeriod" class="control-label"></label>
                            <div class="input-group ">
                                <input asp-for="BillingPeriod" type="number" class="form-control" min="0">
                                <span asp-validation-for="BillingPeriod" class="input-group-text"  type="number" min="1">meses</span>
                            </div>
                            <span asp-validation-for="BillingPeriod" class="text-danger"></span>
                        </div>
                    </div>
                       
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="TrialPeriod" class="control-label"></label>
                            <div class="input-group ">
                                <input asp-for="TrialPeriod" type="number" class="form-control" min="0">
                                <span asp-validation-for="TrialPeriod" class="input-group-text"  type="number">días</span>
                            </div>
                            <span asp-validation-for="TrialPeriod" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>

            </form>
        </div>
      
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
